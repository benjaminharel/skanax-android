<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/itemContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <include layout="@layout/store_mini_header"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="12dp">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <TextView
                fontPath="fonts/opensans_light.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/products"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"/>
            <TextView
                fontPath="fonts/opensans_light.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/delivery"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"/>
            <TextView
                fontPath="fonts/opensans_light.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/total"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="16dp"
                      android:layout_marginStart="16dp"
                      android:layout_weight="1"
                      android:orientation="vertical">

            <TextView
                android:id="@+id/productsPriceTextView"
                fontPath="fonts/opensans_bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_value"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/deliveryPriceTextView"
                fontPath="fonts/opensans_bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/price_value"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/totalPriceTextView"
                fontPath="fonts/opensans_bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/price_value"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <Button
            android:id="@+id/orderCartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_cornered_ripple"
            android:minHeight="0dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:text="@string/order"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>