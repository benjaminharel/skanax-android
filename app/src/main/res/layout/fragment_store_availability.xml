<android.support.design.widget.CoordinatorLayout
    android:id="@+id/fab_coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.thenets.brisk.activities.BecomeBriskerActivity">

    <LinearLayout
        android:id="@id/main_layout"
        android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:background="@color/background_gray"
                  tools:context=".fragments.StoreAvailabilityFragment">

        <View android:layout_width="match_parent"
              android:layout_height="?attr/actionBarSize"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light"
            tools:context=".fragments.StoreAvailabilityFragment">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBoxSunday"
                        style="@style/StoreAvailabilityFragmentDayCheckbox"
                        android:text="@string/sunday"/>

                    <LinearLayout
                        android:id="@+id/hoursLayoutSunday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/fromTimeTextViewSunday"
                            style="@style/StoreAvailabilityFragmentFromTimeTextView"/>
                        <TextView
                            style="@style/StoreAvailabilityFragmentToTextView"
                            android:text="@string/to"/>
                        <TextView
                            android:id="@+id/toTimeTextViewSunday"
                            style="@style/StoreAvailabilityFragmentToTimeTextView"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBoxMonday"
                        style="@style/StoreAvailabilityFragmentDayCheckbox"
                        android:text="@string/monday"/>

                    <LinearLayout
                        android:id="@+id/hoursLayoutMonday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/fromTimeTextViewMonday"
                            style="@style/StoreAvailabilityFragmentFromTimeTextView"/>
                        <TextView
                            style="@style/StoreAvailabilityFragmentToTextView"
                            android:text="@string/to"/>
                        <TextView
                            android:id="@+id/toTimeTextViewMonday"
                            style="@style/StoreAvailabilityFragmentToTimeTextView"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBoxTuesday"
                        style="@style/StoreAvailabilityFragmentDayCheckbox"
                        android:text="@string/tuesday"/>

                    <LinearLayout
                        android:id="@+id/hoursLayoutTuesday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/fromTimeTextViewTuesday"
                            style="@style/StoreAvailabilityFragmentFromTimeTextView"/>
                        <TextView
                            style="@style/StoreAvailabilityFragmentToTextView"
                            android:text="@string/to"/>
                        <TextView
                            android:id="@+id/toTimeTextViewTuesday"
                            style="@style/StoreAvailabilityFragmentToTimeTextView"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBoxWednesday"
                        style="@style/StoreAvailabilityFragmentDayCheckbox"
                        android:text="@string/wednesday"/>

                    <LinearLayout
                        android:id="@+id/hoursLayoutWednesday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/fromTimeTextViewWednesday"
                            style="@style/StoreAvailabilityFragmentFromTimeTextView"/>
                        <TextView
                            style="@style/StoreAvailabilityFragmentToTextView"
                            android:text="@string/to"/>
                        <TextView
                            android:id="@+id/toTimeTextViewWednesday"
                            style="@style/StoreAvailabilityFragmentToTimeTextView"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBoxThursday"
                        style="@style/StoreAvailabilityFragmentDayCheckbox"
                        android:text="@string/thursday"/>

                    <LinearLayout
                        android:id="@+id/hoursLayoutThursday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/fromTimeTextViewThursday"
                            style="@style/StoreAvailabilityFragmentFromTimeTextView"/>
                        <TextView
                            style="@style/StoreAvailabilityFragmentToTextView"
                            android:text="@string/to"/>
                        <TextView
                            android:id="@+id/toTimeTextViewThursday"
                            style="@style/StoreAvailabilityFragmentToTimeTextView"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBoxFriday"
                        style="@style/StoreAvailabilityFragmentDayCheckbox"
                        android:text="@string/friday"/>

                    <LinearLayout
                        android:id="@+id/hoursLayoutFriday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/fromTimeTextViewFriday"
                            style="@style/StoreAvailabilityFragmentFromTimeTextView"/>
                        <TextView
                            style="@style/StoreAvailabilityFragmentToTextView"
                            android:text="@string/to"/>
                        <TextView
                            android:id="@+id/toTimeTextViewFriday"
                            style="@style/StoreAvailabilityFragmentToTimeTextView"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBoxSaturday"
                        style="@style/StoreAvailabilityFragmentDayCheckbox"
                        android:text="@string/saturday"/>

                    <LinearLayout
                        android:id="@+id/hoursLayoutSaturday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/fromTimeTextViewSaturday"
                            style="@style/StoreAvailabilityFragmentFromTimeTextView"/>
                        <TextView
                            style="@style/StoreAvailabilityFragmentToTextView"
                            android:text="@string/to"/>
                        <TextView
                            android:id="@+id/toTimeTextViewSaturday"
                            style="@style/StoreAvailabilityFragmentToTimeTextView"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/fab_appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/store_availability_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_primary"
            android:elevation="@dimen/toolbar_elevation"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/store_availability_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="fabClick"
        android:src="@drawable/ic_navigate_next_white_24dp"
        app:fabSize="normal"
        android:visibility="gone"
        app:layout_anchor="@id/main_layout"
        app:layout_anchorGravity="bottom|right"/>

    <LinearLayout
        android:id="@+id/progressBarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_white_2"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>


