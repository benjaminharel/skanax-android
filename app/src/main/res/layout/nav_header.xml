<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/navHeader"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_header_height"
              android:background="@drawable/nav_header_ripple"
              android:orientation="vertical"
              android:theme="@style/ThemeOverlay.AppCompat.Dark"
              tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/headerImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/headerActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/bg_ripple_white_background_rounded"
        android:text="@string/register"
        android:layout_gravity="center"
        android:textColor="@color/color_primary"/>

    <TextView
        android:id="@+id/itemNameTextView"
        fontPath="fonts/opensans_regular.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_name"
        android:layout_gravity="bottom|start|left"
        android:padding="8dp"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/black_to_transparent_gradient_reverse"
        android:textSize="@dimen/drawer_text_size"/>

</FrameLayout>
