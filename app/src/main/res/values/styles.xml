<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.Explode" parent="AppTheme">
    </style>

    <style name="AppTheme.SlideIn" parent="AppTheme">
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="DialogCustomTheme" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/SlideUpDownAnimation</item>
    </style>

    <style name="SlideUpDownAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="StoreAvailabilityFragmentDayCheckbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="StoreAvailabilityFragmentFromTimeTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:text">07:00</item>
    </style>

    <style name="StoreAvailabilityFragmentToTimeTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:text">22:00</item>
    </style>

    <style name="StoreAvailabilityFragmentToTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp
        </item> <!-- bug in AppCompat, can remove this when it's fixed -->
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Filter" parent="TextAppearance.Body1">
        <item name="android:textColor">@color/filter_text</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="NumberPickerCustomDialog" parent="@android:style/Theme.NoTitleBar.Fullscreen">
    </style>

    <style name="TextProfile" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp
        </item> <!-- bug in AppCompat, can remove this when it's fixed -->
        <!--<item name="android:paddingLeft">32dp</item>-->
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:layout_gravity">center_horizontal</item>-->
    </style>

    <style name="CustomRatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_custom_bar_small</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="CustomRatingBarBig" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_custom_bar_big</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_custom_bar_rating</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="AppInfoItem">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FloatingActionButton">
        <item name="elevation">6dp</item>
        <item name="fabSize">normal</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="borderWidth">0dp</item>
    </style>

</resources>
